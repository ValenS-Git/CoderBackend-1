{{#extends "main"}}

{{#block "body"}}
    <h2>{{product.name}}</h2>

    <div class="product-detail">
        <img src="{{product.image}}" alt="{{product.name}}" />
        <div class="product-info">
            <p><strong>Descripción:</strong> {{product.description}}</p>
            <p><strong>Categoría:</strong> {{product.category}}</p>
            <p><strong>Precio:</strong> ${{product.price}}</p>
            <p><strong>Disponibilidad:</strong> {{#if product.availability}}Disponible{{else}}No disponible{{/if}}</p>
        </div>
    </div>

    <form action="/carts/{{cartId}}/products/{{product._id}}" method="POST">
        <button type="submit" class="btn-add-to-cart">Agregar al carrito</button>
    </form>

    <a href="/products" class="btn-back-to-products">Volver a la lista de productos</a>
{{/block}}
